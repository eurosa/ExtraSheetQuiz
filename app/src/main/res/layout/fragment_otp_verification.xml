<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.OtpVerificationFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/space_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_otp"
            android:inputType="number"
            android:paddingLeft="@dimen/space_10"

            android:gravity="center"
            android:textSize="@dimen/space_16"
            android:hint="One Time Password (OTP)"
            android:maxLength="6"
            android:background="@drawable/edit_text_border_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/btn_verify"
            android:textColor="@color/white"
            android:text="Verify One Time Password (OTP)"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/space_20"
            android:background="@drawable/gradient_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>