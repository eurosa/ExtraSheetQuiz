<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_5"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/space_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:background="@drawable/white_button_layout"
                android:orientation="horizontal"
                android:padding="@dimen/space_5"
                android:paddingBottom="@dimen/space_5"
                android:weightSum="6">

                <RelativeLayout

                    android:id="@+id/rel_bcl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_10"
                    android:background="@drawable/circle_border_layout"
                    android:backgroundTint="@color/badge_background_color"

                    android:padding="@dimen/space_2">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_border_layout"
                        android:backgroundTint="@color/white"
                        android:padding="@dimen/space_2">

                        <RelativeLayout
                            android:id="@+id/rel_fcl"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/circleshape"
                            android:backgroundTint="@color/badge_background_color">

                            <com.upsun.quizz.Fonts.LatoBLack
                                android:id="@+id/tv_sm"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:text="M"
                                android:textAlignment="gravity"
                                android:textColor="@color/white" />
                        </RelativeLayout>
                    </RelativeLayout>


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_weight="4"
                    android:orientation="vertical">


                    <com.upsun.quizz.Fonts.LatoBLack
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_marginRight="@dimen/space_30"
                        android:text="name"
                        android:textSize="17dp" />


                    <com.upsun.quizz.Fonts.LatoBLack
                        android:id="@+id/tv_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_2"
                        android:layout_weight="4"
                        android:text="name"
                        android:textSize="14dp" />

                    <com.upsun.quizz.Fonts.LatoBLack

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:text="name"
                        android:textAlignment="viewEnd"
                        android:textSize="17dp"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:orientation="vertical">

                    <com.upsun.quizz.Fonts.LatoBLack
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On:"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/space_10" />

                    <com.upsun.quizz.Fonts.LatoBLack
                        android:id="@+id/tv_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On:"
                        android:visibility="gone"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/space_10" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginTop="2dp"
                android:layout_marginRight="@dimen/space_20"
                android:background="@drawable/gradient_button_layout"
                android:text="Update Rewards"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>