                                android:backgroundTint="@color/white" />

                            <com.upsun.quizz.Fonts.LatoBLack

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:text="Set Refer Reward Amount"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_withdraw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradientsbackground"
                            android:paddingTop="@dimen/space_10"
                            android:paddingBottom="@dimen/space_10">

                            <ImageView

                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/icons8_cash_withdrawal_64px"
                                android:backgroundTint="@color/white" />

                            <com.upsun.quizz.Fonts.LatoBLack

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:text="Withdrawal Requests"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_add_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        app:cardCornerRadius="10dp"
