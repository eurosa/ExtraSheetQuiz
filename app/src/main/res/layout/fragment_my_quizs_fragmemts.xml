<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MyQuizsFragmemts">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/gradientsbackground"
                android:gravity="center_vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_10"
                    android:background="@drawable/white_button_layout"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:elevation="@dimen/space_5"

                    android:weightSum="3">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/transparent">
                        >

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/space_5"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="@dimen/space_5">

                            <ImageView

                                android:layout_width="@dimen/space_30"
                                android:layout_height="@dimen/space_30"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/space_5"
                                android:background="@drawable/circleshape"
                                android:backgroundTint="@color/white"
                                android:padding="@dimen/space_5"
                                android:src="@drawable/icons8_quiz_100px"
                                app:tint="@color/colorPrimaryDark" />

                            <com.upsun.quizz.Fonts.LatoBLack
                                android:id="@+id/total_quiz"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/space_2"
                                android:gravity="center_horizontal"
                                android:padding="2dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="10dp" />

                            <com.upsun.quizz.Fonts.LatoBLack

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/space_2"
                                android:gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Total Quiz"
                                android:textColor="@color/white"
                                android:textSize="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/transparent">
                        >

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/space_5"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="@dimen/space_5">

                            <ImageView

                                android:layout_width="@dimen/space_30"
                                android:layout_height="@dimen/space_30"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/space_5"
                                android:background="@drawable/circleshape"
                                android:backgroundTint="@color/white"
                                android:padding="@dimen/space_5"
                                android:src="@drawable/icons8_leaderboard_96px"
                                android:tint="@color/colorPrimaryDark" />

                            <com.upsun.quizz.Fonts.LatoBLack
                                android:id="@+id/avg_rank"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/space_2"
                                android:gravity="center_horizontal"
                                android:padding="2dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="10dp" />

                            <com.upsun.quizz.Fonts.LatoBLack

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/space_2"
                                android:gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Avg. Rank"
                                android:textColor="@color/white"
                                android:textSize="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/transparent">
                        >

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/space_5"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="@dimen/space_5">

                            <ImageView

                                android:layout_width="@dimen/space_30"
                                android:layout_height="@dimen/space_30"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/space_5"
                                android:background="@drawable/circleshape"
                                android:backgroundTint="@color/white"
                                android:padding="@dimen/space_5"
                                android:src="@drawable/icons8_discount_80px"
                                android:tint="@color/colorPrimaryDark" />

                            <com.upsun.quizz.Fonts.LatoBLack
                                android:id="@+id/avg_per"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/space_2"
                                android:gravity="center_horizontal"
                                android:padding="2dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="10dp" />

                            <com.upsun.quizz.Fonts.LatoBLack
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/space_2"
                                android:gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Avg. Percentage"
                                android:textColor="@color/white"
                                android:textSize="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <com.upsun.quizz.Fonts.LatoBLack
                        android:id="@+id/not_played"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_button_layout"
                        android:backgroundTint="@color/red_600"
                        android:gravity="center"
                        android:padding="@dimen/space_2"
                        android:text="Unattempted Quiz"
                        android:textColor="@color/white"

                        android:textSize="@dimen/space_14"
                        android:visibility="gone" />

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.upsun.quizz.Fonts.LatoBLack
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@color/white"
                    android:padding="@dimen/space_5"
                    android:text="Total Quiz played in last 2 days : "
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/space_16" />

                <com.upsun.quizz.Fonts.LatoBLack
                    android:id="@+id/tv_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="3"
                    android:background="@color/white"
                    android:gravity="end"
                    android:padding="@dimen/space_5"
                    android:text="0"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/space_16" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_20"
                app:cardBackgroundColor="@color/white"

                app:cardCornerRadius="@dimen/space_10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/space_10">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_trans"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:id="@+id/rel_no_items"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_gravity="center"
                                android:padding="60dp"
                                android:src="@drawable/no_quiz" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/bold"
                                android:gravity="center_horizontal"
                                android:text="No Quiz Taken"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_all"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="@dimen/space_10"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/space_2"
            app:cardElevation="@dimen/space_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradientsbackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="3"
                        android:padding="15dp"
                        android:src="@drawable/icons8_contract_100px"
                        android:tint="@color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <com.upsun.quizz.Fonts.LatoBLack

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Total Quiz"
                            android:textColor="@color/white"
                            android:textSize="18dp"


                            />

                        <com.upsun.quizz.Fonts.LatoBLack

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="18dp"


                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/icons8_chevron_right_52px"
                        android:tint="@color/white" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_won"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="@dimen/space_10"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/space_2"
            app:cardElevation="@dimen/space_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradientsbackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="3"
                        android:padding="15dp"
                        android:src="@drawable/icons8_test_passed_100px"
                        android:tint="@color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <com.upsun.quizz.Fonts.LatoBLack

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Quiz Won"
                            android:textColor="@color/white"
                            android:textSize="18dp"


                            />

                        <com.upsun.quizz.Fonts.LatoBLack

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="18dp"


                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/icons8_chevron_right_52px"
                        android:tint="@color/white" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_lost"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="@dimen/space_10"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/space_2"
            app:cardElevation="@dimen/space_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradientsbackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="3"
                        android:padding="15dp"
                        android:src="@drawable/icons8_scorecard_240px"
                        android:tint="@color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <com.upsun.quizz.Fonts.LatoBLack

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Quiz Lost"
                            android:textColor="@color/white"
                            android:textSize="18dp"


                            />

                        <com.upsun.quizz.Fonts.LatoBLack

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="18dp"


                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/icons8_chevron_right_52px"
                        android:tint="@color/white" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>