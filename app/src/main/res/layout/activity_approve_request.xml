<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.activities.ApproveRequestActivity">
    <include layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="@dimen/space_10"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/user_circle"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/space_2"
                android:background="@color/gray"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_name"
                android:gravity="center_horizontal"
                android:text="Name : "
                android:textColor="@color/dark_black"
                android:textSize="@dimen/space_22"
                android:fontFamily="@font/bold"
                android:layout_marginTop="@dimen/space_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_mobile"
                android:gravity="center_horizontal"
                android:text="Mobile Number : "
                android:textColor="@color/dark_black"
                android:textSize="@dimen/space_18"
                android:fontFamily="@font/bold"
                android:layout_marginTop="@dimen/space_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/space_5"
                android:background="@color/gray"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <com.upsun.quizz.Fonts.LatoBLack

                    android:text="Date : "
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <com.upsun.quizz.Fonts.LatoBLack
                    android:id="@+id/tv_date"
                    android:text="0"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingRight="@dimen/space_5"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="Time "
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="0"
                    android:id="@+id/tv_time"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingRight="@dimen/space_5"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="Requested Amount :"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="0"
                    android:id="@+id/tv_amt"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingRight="@dimen/space_5"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="Type :"
                    android:id="@+id/txt_name"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="0"
                    android:id="@+id/tv_type"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingRight="@dimen/space_5"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="Status :"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="0"
                    android:id="@+id/tv_status"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingRight="@dimen/space_5"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_upi"
                android:visibility="gone"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="UPI :"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="0"
                    android:id="@+id/tv_upi"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingRight="@dimen/space_5"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_bank"
            android:visibility="gone"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginRight="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="Bank Name :"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="0"
                    android:id="@+id/tv_bank_name"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingRight="@dimen/space_5"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_10"
                android:weightSum="2"
                >
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="Account No :"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="0"
                    android:id="@+id/tv_acc_no"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingRight="@dimen/space_5"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_10"
                android:weightSum="2"
                >
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="IFSC Code :"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="0"
                    android:id="@+id/tv_ifsc"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingRight="@dimen/space_5"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_10"
                android:weightSum="2"
                >
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="Acc Holder Name :"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <com.upsun.quizz.Fonts.LatoBLack
                    android:text="0"
                    android:id="@+id/tv_holder"
                    android:textSize="@dimen/space_16"
                    android:textColor="@color/dark_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingRight="@dimen/space_5"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_margin="@dimen/space_10"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_approve"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:text="Approve"
                    android:backgroundTint="@color/green_500"
                    android:layout_height="@dimen/dimen_50dp"/>
                <Button
                    android:id="@+id/btn_decline"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:text="Decline"
                    android:backgroundTint="@color/red"
                    android:layout_height="@dimen/dimen_50dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>