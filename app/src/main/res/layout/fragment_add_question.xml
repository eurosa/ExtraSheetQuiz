<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.fragments.AddQuestionFragment">
 <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_5"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.upsun.quizz.Fonts.LatoBLack
                android:layout_toLeftOf="@id/tv_ques_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question No:"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/space_15"
                android:padding="@dimen/space_5"
                android:layout_marginTop="@dimen/space_10"
                android:textColor="@color/dark_black"
                />
            <com.upsun.quizz.Fonts.LatoBLack
                android:id="@+id/tv_ques_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" abc"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/space_15"
                android:padding="@dimen/space_5"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/space_10"
                android:textColor="@color/dark_black"
                android:textStyle="bold"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/space_20"
            android:orientation="horizontal">
            <com.upsun.quizz.Fonts.LatoBLack
                android:layout_toLeftOf="@id/tv_ques_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language :"
                android:textSize="@dimen/space_15"
                android:padding="@dimen/space_5"

                android:textColor="@color/dark_black"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2">


            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="English"
                android:id="@+id/english"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Hindi"
                android:id="@+id/hindi"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_english">
            <com.upsun.quizz.Fonts.LatoBLack

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English Question"
                android:textSize="@dimen/space_15"
                android:padding="@dimen/space_5"
                android:visibility="gone"
                android:textColor="@color/dark_black"
                />
        <EditText
            android:id="@+id/et_ques"
            android:hint="Enter Question in english"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="@dimen/space_5"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="12sp"
            android:background="@drawable/edit_gray_border_layout"
            android:ems="10"
            android:fontFamily="@font/bold"
            android:inputType="text"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/et_option_a"
            android:hint="Enter Option A"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="12sp"
            android:background="@drawable/edit_gray_border_layout"
            android:ems="10"
            android:fontFamily="@font/bold"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/et_option_b"
            android:hint="Enter Option B"
            android:paddingLeft="@dimen/space_5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:fontFamily="@font/bold"
            android:background="@drawable/edit_gray_border_layout"
            android:ems="10"
            android:inputType="text"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/et_option_c"
            android:hint="Enter Option C"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="12sp"
            android:background="@drawable/edit_gray_border_layout"
            android:ems="10"
            android:fontFamily="@font/bold"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/et_option_d"
            android:hint="Enter Option D"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="@dimen/space_5"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:fontFamily="@font/bold"
            android:background="@drawable/edit_gray_border_layout"
            android:ems="10"
            android:inputType="text"
            android:singleLine="true"/>

        <Spinner
            android:id="@+id/spin_ans"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:hint="Religion"
            android:textSize="14dp"
            android:background="@drawable/edit_gray_border_layout"
            android:singleLine="true"
            android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_hindi">
            <com.upsun.quizz.Fonts.LatoBLack

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hindi Question"
                android:textSize="@dimen/space_15"
                android:padding="@dimen/space_5"
                android:visibility="gone"
                android:textColor="@color/dark_black"
                />
            <EditText
                android:id="@+id/et_h_ques"
                android:hint="Enter Question in hindi"
                android:layout_gravity="start"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="@dimen/space_5"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginTop="@dimen/space_4"
                android:textSize="12sp"
                android:background="@drawable/edit_gray_border_layout"
                android:ems="10"
                android:fontFamily="@font/bold"
                android:inputType="text"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/et_h_option_a"
                android:hint="Enter Option A "
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginTop="@dimen/space_4"
                android:textSize="12sp"
                android:background="@drawable/edit_gray_border_layout"
                android:ems="10"
                android:fontFamily="@font/bold"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/et_h_option_b"
                android:hint="Enter Option B "
                android:paddingLeft="@dimen/space_5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginTop="@dimen/space_4"
                android:textSize="14sp"
                android:fontFamily="@font/bold"
                android:background="@drawable/edit_gray_border_layout"
                android:ems="10"
                android:inputType="text"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/et_h_option_c"
                android:hint="Enter Option C "
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginTop="@dimen/space_4"
                android:textSize="12sp"
                android:background="@drawable/edit_gray_border_layout"
                android:ems="10"
                android:fontFamily="@font/bold"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/et_h_option_d"
                android:hint="Enter Option D "
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/space_5"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginTop="@dimen/space_4"
                android:textSize="14sp"
                android:fontFamily="@font/bold"
                android:background="@drawable/edit_gray_border_layout"
                android:ems="10"
                android:inputType="text"
                android:singleLine="true"/>

            <Spinner
                android:id="@+id/spin_h_ans"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:textSize="14dp"
                android:background="@drawable/edit_gray_border_layout"
                android:singleLine="true"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_add_ques"
            android:layout_margin="@dimen/space_20"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Add Question"
            android:background="@drawable/gradient_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_edit_ques"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginTop="@dimen/space_10"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Update Question"

            android:background="@drawable/gradient_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_view_ques"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="View All Questions"
            android:background="@drawable/gradient_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    </ScrollView>

</LinearLayout>