<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_5"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/space_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lin_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_5">

                <com.upsun.quizz.Fonts.LatoBLack
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quiz Title"
                    android:textColor="@color/dark_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">


                        <com.upsun.quizz.Fonts.LatoBLack
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quiz Title"
                            android:textSize="@dimen/space_12" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.upsun.quizz.Fonts.LatoBLack
                                android:id="@+id/tv_start_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/space_5"
                                android:paddingRight="@dimen/space_5"
                                android:text="Quiz Title"
                                android:textSize="@dimen/space_12" />

                        </RelativeLayout>

                        <com.upsun.quizz.Fonts.LatoBLack
                            android:id="@+id/tv_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="@dimen/space_5"
                            android:paddingRight="@dimen/space_5"
                            android:text="Quiz Title"
                            android:textSize="@dimen/space_12" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/space_3"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/lin_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_edit"
                            android:layout_width="@dimen/space_30"
                            android:layout_height="@dimen/space_30"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/circleshape"
                            android:backgroundTint="@color/green_500"
                            android:padding="@dimen/space_5"
                            android:src="@drawable/icons8_edit1_128px_1" />

                        <com.upsun.quizz.Fonts.LatoBLack
                            android:id="@+id/tv_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/space_2"
                            android:gravity="center_horizontal"
                            android:text="Edit Quiz"
                            android:textColor="@color/dark_black"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_rewards"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_rew"
                            android:layout_width="@dimen/space_30"
                            android:layout_height="@dimen/space_30"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/circleshape"
                            android:backgroundTint="@color/green_500"
                            android:padding="@dimen/space_7"
                            android:src="@drawable/icons8_request_money_50px" />

                        <com.upsun.quizz.Fonts.LatoBLack
                            android:id="@+id/tv_rew"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/space_2"
                            android:gravity="center_horizontal"
                            android:text="Add/Edit Rewards"
                            android:textColor="@color/dark_black"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_section"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_section"
                            android:layout_width="@dimen/space_30"
                            android:layout_height="@dimen/space_30"

                            android:layout_alignParentRight="true"
                            android:background="@drawable/circleshape"
                            android:backgroundTint="@color/green_500"
                            android:padding="@dimen/space_7"
                            android:src="@drawable/icons8_add_100px" />

                        <com.upsun.quizz.Fonts.LatoBLack
                            android:id="@+id/tv_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/space_2"
                            android:gravity="center_horizontal"
                            android:text="Add Sections"
                            android:textColor="@color/dark_black"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_delete"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_delete"
                            android:layout_width="@dimen/space_30"
                            android:layout_height="@dimen/space_30"

                            android:layout_alignParentRight="true"
                            android:background="@drawable/circleshape"
                            android:backgroundTint="@color/red_600"
                            android:padding="@dimen/space_7"
                            android:src="@drawable/icons8_delete_100px" />

                        <com.upsun.quizz.Fonts.LatoBLack
                            android:id="@+id/tv_delete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/space_2"
                            android:gravity="center_horizontal"
                            android:text="Remove Quiz"
                            android:textColor="@color/dark_black"
                            android:textSize="10dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>