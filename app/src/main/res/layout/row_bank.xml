<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/space_5"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/space_5"
        app:cardCornerRadius="@dimen/space_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lin_main"
        android:padding="@dimen/space_4"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:weightSum="6"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel_bcl"
            android:padding="@dimen/space_2"
            android:backgroundTint="@color/badge_background_color"
            android:background="@drawable/circle_border_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="@dimen/space_2"
            android:backgroundTint="@color/white"
            android:background="@drawable/circle_border_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rel_fcl"
                android:backgroundTint="@color/badge_background_color"
                android:background="@drawable/circleshape"
                android:layout_width="40dp"
                android:layout_height="40dp">
            <com.upsun.quizz.Fonts.LatoBLack
                android:id="@+id/tv_sm"
                android:text="M"
                android:textAlignment="gravity"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            </RelativeLayout>
        </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:weightSum="5"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:text="Math"
                android:layout_weight="4.5"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="@dimen/space_5"
                android:fontFamily="@font/bold"
                android:textColor="@color/dark_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="32dp"
                android:padding="@dimen/space_5"
                android:layout_alignParentRight="true"
                android:background="@drawable/circleshape"
                android:backgroundTint="@color/green_500"
                android:src="@drawable/icons8_edit1_128px_1"
                android:layout_height="32dp"/>

        </LinearLayout>


    </LinearLayout>
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="@dimen/space_20"
                android:padding="@dimen/space_5"

                android:layout_alignParentRight="true"
                android:background="@drawable/circleshape"
                android:backgroundTint="@color/red_600"
                android:src="@drawable/icons8_delete_100px"
                android:layout_height="@dimen/space_20"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>