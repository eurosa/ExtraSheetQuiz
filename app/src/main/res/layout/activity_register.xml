<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientsbackground"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/bungee_inline"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="50dp" />

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/tv"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="30dp"
                        android:background="@drawable/white_button_layout">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="50dp"
                                android:layout_marginRight="@dimen/space_20"
                                android:layout_marginBottom="@dimen/space_20"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/et_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="35dp"
                                    android:background="@drawable/edit_text_border_layout"
                                    android:hint="Name"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent"
                                    android:textSize="16dp" />

                                <EditText
                                    android:id="@+id/et_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/edit_text_border_layout"
                                    android:hint="Email"
                                    android:inputType="textEmailAddress"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent"
                                    android:textSize="16dp" />

                                <EditText
                                    android:id="@+id/et_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/edit_text_border_layout"
                                    android:inputType="phone"
                                    android:hint="Mobile Number"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent"
                                    android:textSize="16dp" />


                                <EditText
                                    android:id="@+id/et_pass"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/edit_text_border_layout"
                                    android:hint="Password"
                                    android:inputType="textPassword"
                                    android:paddingLeft="@dimen/space_10"
                                    android:singleLine="true"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent"
                                    android:textSize="16dp" />

                                <EditText
                                    android:id="@+id/et_con_pass"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/edit_text_border_layout"
                                    android:hint="Confirm Password"
                                    android:inputType="textPassword"
                                    android:paddingLeft="@dimen/space_10"
                                    android:singleLine="true"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent"
                                    android:textSize="16dp" />

                                <EditText
                                    android:id="@+id/et_refer"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/edit_text_border_layout"
                                    android:hint="Referral code (Optional)"
                                    android:paddingLeft="@dimen/space_10"
                                    android:singleLine="true"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent"
                                    android:textSize="16dp" />


                                <Button
                                    android:id="@+id/btn_reg"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/gradient_button_layout"
                                    android:text="Register"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                        </RelativeLayout>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/circleshape"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/icons8_user_100px_1" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>