<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/space_5"
    android:padding="@dimen/space_5"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/space_5"
        app:cardCornerRadius="@dimen/space_5"
        android:padding="@dimen/space_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lin_main"
        android:padding="@dimen/space_4"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:weightSum="6"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel_bcl"
            android:padding="@dimen/space_2"
            android:backgroundTint="@color/badge_background_color"
            android:background="@drawable/circle_border_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="@dimen/space_2"
            android:backgroundTint="@color/white"
            android:background="@drawable/circle_border_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rel_fcl"
                android:backgroundTint="@color/badge_background_color"
                android:background="@drawable/circleshape"
                android:layout_width="40dp"
                android:layout_height="40dp">
            <com.upsun.quizz.Fonts.LatoBLack
                android:id="@+id/tv_sm"
                android:text="0"
                android:textAlignment="gravity"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            </RelativeLayout>
        </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_rew"
                android:gravity="end"
                android:textSize="22dp"
                android:enabled="false"
                android:layout_gravity="center_vertical"
                android:textAlignment="gravity"
                android:paddingLeft="10dp"
                android:paddingRight="@dimen/space_5"
                android:fontFamily="@font/bold"
                android:textColor="@color/dark_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_name"
                android:gravity="end"
                android:textSize="10dp"
                android:layout_gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="@dimen/space_5"
                android:fontFamily="@font/bold"
                android:textColor="@color/dark_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>