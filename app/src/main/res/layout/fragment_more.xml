<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientsbackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.MoreFragment">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
        android:paddingLeft="@dimen/space_10"
      android:paddingRight="@dimen/space_10"
      android:layout_centerInParent="true">
      <androidx.cardview.widget.CardView

          app:cardBackgroundColor="@android:color/transparent"
             android:layout_width="match_parent"
          android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_margin="@dimen/space_5"
          android:layout_gravity="center">

          <androidx.cardview.widget.CardView
              android:id="@+id/card_contact"
              android:layout_width="match_parent"
              app:cardBackgroundColor="@color/white"
              app:cardCornerRadius="@dimen/space_10"
              android:layout_marginTop="@dimen/space_5"
              android:layout_height="wrap_content">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"

              >
              <LinearLayout
                  android:id="@+id/linear_contact"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"

                  android:gravity="center_vertical">
                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_margin="5dp"
                      android:tint="@color/colorPrimary"
                      android:src="@drawable/icons8_contact_details_64px"
                      android:padding="2dp"
                      />
                  <com.upsun.quizz.Fonts.LatoBLack

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:layout_margin="5dp"
                      android:text="Contact Us"
                      android:textColor="@color/dark_black"
                      android:textSize="16dp"
                      android:layout_centerVertical="true"

                      />
              </LinearLayout>

          </RelativeLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:id="@+id/card_withdraw"
              android:layout_width="match_parent"
              app:cardBackgroundColor="@color/white"
              app:cardCornerRadius="@dimen/space_10"
              android:layout_marginTop="@dimen/space_5"
              android:layout_height="wrap_content">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:layout_marginTop="2dp"
              >
              <LinearLayout
                  android:id="@+id/linear_withdrawl"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"

                  android:gravity="center_vertical">
                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_margin="5dp"
                      android:tint="@color/colorPrimary"
                      android:src="@drawable/icons8_cash_withdrawal_64px"
                      android:padding="2dp"
                      />
                  <com.upsun.quizz.Fonts.LatoBLack

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:layout_margin="5dp"
                      android:text="Withdrawal History"
                      android:textColor="@color/dark_black"
                      android:textSize="16dp"
                      android:layout_centerVertical="true"

                      />
              </LinearLayout>

          </RelativeLayout></androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:id="@+id/card_terms"
              android:layout_width="match_parent"
              app:cardBackgroundColor="@color/white"
              app:cardCornerRadius="@dimen/space_10"
              android:layout_marginTop="@dimen/space_5"
              android:layout_height="wrap_content">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:layout_marginTop="2dp"
              >
              <LinearLayout
                  android:id="@+id/linear_terms"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"

                  android:gravity="center_vertical">
                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_margin="5dp"
                      android:tint="@color/colorPrimary"
                        android:src="@drawable/icons8_terms_and_conditions_50px"
                      android:padding="2dp"
                      />
                  <com.upsun.quizz.Fonts.LatoBLack

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:layout_margin="5dp"
                      android:text="Terms &amp; Conditions"
                      android:textColor="@color/dark_black"
                      android:textSize="16dp"
                      android:layout_centerVertical="true"

                      />
              </LinearLayout>

          </RelativeLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:id="@+id/card_privacy"
              android:layout_width="match_parent"
              app:cardBackgroundColor="@color/white"
              app:cardCornerRadius="@dimen/space_10"
              android:layout_marginTop="@dimen/space_5"
              android:layout_height="wrap_content">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:layout_marginTop="2dp"
              >
              <LinearLayout
                  android:id="@+id/linear_privacy"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"

                  android:gravity="center_vertical">
                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_margin="5dp"
                      android:tint="@color/colorPrimary"
                        android:src="@drawable/icons8_privacy_50px"
                      android:padding="2dp"
                      />
                  <com.upsun.quizz.Fonts.LatoBLack

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:layout_margin="5dp"
                      android:text="Privacy"
                      android:textColor="@color/dark_black"
                      android:textSize="16dp"
                      android:layout_centerVertical="true"

                      />
              </LinearLayout>

          </RelativeLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:id="@+id/card_about"
              android:layout_width="match_parent"
              app:cardBackgroundColor="@color/white"
              app:cardCornerRadius="@dimen/space_10"
              android:layout_marginTop="@dimen/space_5"
              android:layout_height="wrap_content">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:layout_marginTop="2dp"
              >
              <LinearLayout
                  android:id="@+id/linear_about"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"

                  android:gravity="center_vertical">
                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_margin="5dp"
                      android:tint="@color/colorPrimary"
                      android:src="@drawable/icons8_about_50px"
                      android:padding="2dp"
                      />
                  <com.upsun.quizz.Fonts.LatoBLack

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:layout_margin="5dp"
                      android:text="About Us"
                      android:textColor="@color/dark_black"
                      android:textSize="16dp"
                      android:layout_centerVertical="true"

                      />
              </LinearLayout>

          </RelativeLayout>
          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:id="@+id/card_share"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/space_5"
              android:visibility="gone"
              app:cardBackgroundColor="@color/white"
              app:cardCornerRadius="@dimen/space_10">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:background="@color/white">

                  <LinearLayout
                      android:id="@+id/linear_share"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:orientation="horizontal"
                      android:paddingLeft="15dp"

                      android:paddingRight="15dp">

                      <ImageView
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:layout_margin="5dp"
                          android:padding="2dp"
                          android:src="@drawable/icons8_share_48px_1"
                          android:tint="@color/colorPrimary" />

                      <com.upsun.quizz.Fonts.LatoBLack

                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_margin="5dp"
                          android:padding="5dp"
                          android:text="Share App"
                          android:textColor="@color/dark_black"
                          android:textSize="16dp"

                          />
                  </LinearLayout>

              </RelativeLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:id="@+id/card_refer"
              android:layout_width="match_parent"
              app:cardBackgroundColor="@color/white"
              app:cardCornerRadius="@dimen/space_10"
              android:layout_marginTop="@dimen/space_5"
              android:layout_height="wrap_content">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:layout_marginTop="2dp"
                  >

                  <LinearLayout

                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:orientation="horizontal"
                      android:paddingLeft="15dp"

                      android:paddingRight="15dp">

                      <ImageView
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:layout_margin="5dp"
                          android:padding="2dp"
                          android:src="@drawable/ic_baseline_link_24"
                          android:tint="@color/colorPrimary" />

                      <com.upsun.quizz.Fonts.LatoBLack

                          android:id="@+id/showReferCode"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_margin="5dp"
                          android:padding="5dp"
                          android:text="Refer and Earn"
                          android:textColor="@color/dark_black"

                          android:textSize="16dp" />
                  </LinearLayout>

              </RelativeLayout>
          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:id="@+id/card_logout"
              android:layout_width="match_parent"
              app:cardBackgroundColor="@color/white"
              app:cardCornerRadius="@dimen/space_10"
              android:layout_marginTop="@dimen/space_5"
              android:layout_height="wrap_content">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:layout_marginTop="2dp"
                  >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingLeft="15dp"
                      android:paddingRight="15dp"
                      android:gravity="center_vertical">
                      <ImageView
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:layout_margin="5dp"
                          android:tint="@color/colorPrimary"
                          android:src="@drawable/icons8_logout_rounded_up_52px_1"
                          android:padding="2dp"
                          />
                      <com.upsun.quizz.Fonts.LatoBLack

                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:padding="5dp"
                          android:layout_margin="5dp"
                          android:text="Logout"
                          android:textColor="@color/dark_black"
                          android:textSize="16dp"
                          android:layout_centerVertical="true"

                          />
                  </LinearLayout>

              </RelativeLayout>
          </androidx.cardview.widget.CardView>




      </LinearLayout>
      </androidx.cardview.widget.CardView>
  </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/space_15">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/space_20"
            android:layout_gravity="center_horizontal"/>
        <com.upsun.quizz.Fonts.LatoBLack
            android:id="@+id/txt_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"

            />

        <com.upsun.quizz.Fonts.LatoBLack
            android:id="@+id/txt_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="@string/app_name"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:textSize="@dimen/space_12"

            />
    </LinearLayout>
</RelativeLayout>