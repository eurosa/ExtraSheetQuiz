<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/space_5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/space_5"
                android:background="@color/white"
                android:padding="@dimen/space_3"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/lin_main"
                    android:weightSum="7"
                    android:orientation="horizontal"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <com.upsun.quizz.Fonts.LatoBLack
                            android:id="@+id/tv_ques"
                            android:text="ques"
                            android:textColor="@color/dark_black"
                            android:textSize="14dp"
                            android:maxLines="3"
                            android:layout_toRightOf="@+id/rel_bcl"
                            android:layout_margin="3dp"
                            android:padding="@dimen/space_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_gravity="end|center_vertical"
                        android:layout_width="0dp"
                        android:gravity="end"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_add"
                            android:layout_width="@dimen/space_25"
                            android:layout_height="@dimen/space_25"
                            android:layout_marginRight="@dimen/space_10"
                            android:visibility="gone"
                            android:background="@drawable/circleshape"
                            android:backgroundTint="@color/green_500"
                            android:src="@drawable/icons8_add_100px" />
                        <ImageView
                            android:id="@+id/iv_delete"
                            android:visibility="gone"
                            android:padding="@dimen/space_5"
                            android:layout_width="@dimen/space_25"
                            android:layout_marginRight="@dimen/space_10"
                            android:background="@drawable/circleshape"
                            android:backgroundTint="@color/red_600"
                            android:src="@drawable/icons8_delete_100px"
                            android:layout_height="@dimen/space_25"/>
                    </RelativeLayout>
                </LinearLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/rel_view"
                        android:background="@color/grey_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.upsun.quizz.Fonts.LatoBLack
                            android:padding="@dimen/space_3"
                            android:textAlignment="gravity"
                            android:text="View Question Detail"
                            android:textSize="@dimen/space_12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>