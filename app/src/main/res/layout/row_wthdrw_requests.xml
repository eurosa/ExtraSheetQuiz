<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_margin="@dimen/space_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/space_5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lin_main"
                android:padding="@dimen/space_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <com.upsun.quizz.Fonts.LatoBLack
                        android:id="@+id/tv_title"
                        android:text="Quiz Title"
                        android:textSize="@dimen/space_16"
                        android:textColor="@color/dark_black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <com.upsun.quizz.Fonts.LatoBLack
                        android:id="@+id/tv_time"
                        android:text="0"
                        android:textSize="@dimen/space_16"
                        android:textColor="@color/dark_black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingRight="@dimen/space_5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                   >
                    <com.upsun.quizz.Fonts.LatoBLack

                        android:text="Amount Requested :"
                        android:textSize="@dimen/space_16"
                        android:textColor="@color/dark_black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <com.upsun.quizz.Fonts.LatoBLack
                        android:id="@+id/tv_amt"
                        android:text="0"
                        android:textSize="@dimen/space_16"
                        android:textColor="@color/dark_black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingRight="@dimen/space_5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <com.upsun.quizz.Fonts.LatoBLack
                         android:id="@+id/txt_type"
                        android:text=" :"
                        android:textSize="@dimen/space_16"
                        android:textColor="@color/dark_black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <com.upsun.quizz.Fonts.LatoBLack
                        android:id="@+id/tv_type"
                        android:text="0"
                        android:textSize="@dimen/space_16"
                        android:textColor="@color/dark_black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingRight="@dimen/space_5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <com.upsun.quizz.Fonts.LatoBLack

                        android:text="Status:"
                        android:textSize="@dimen/space_16"
                        android:textColor="@color/dark_black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <com.upsun.quizz.Fonts.LatoBLack
                        android:id="@+id/tv_status"
                        android:text="0"
                        android:textSize="@dimen/space_16"
                        android:textColor="@color/dark_black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingRight="@dimen/space_5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <View
                    android:id="@+id/vw"
                    android:layout_marginTop="@dimen/space_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:id="@+id/lin_approve"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_marginBottom="@dimen/space_5"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lin_edit"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_edit"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="@dimen/space_30"
                            android:padding="@dimen/space_5"
                            android:visibility="gone"
                            android:background="@drawable/circleshape"
                            android:backgroundTint="@color/green_500"
                            android:src="@drawable/icons8_edit1_128px_1"
                            android:layout_height="@dimen/space_30"/>
                        <Button
                            android:id="@+id/approve"
                            android:layout_gravity="center_horizontal"

                           android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:text="Approve"

                            android:background="@drawable/white_button_layout"
                            android:backgroundTint="@color/green_500"
                            android:layout_height="@dimen/space_30"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lin_delete"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_delete"
                            android:layout_width="@dimen/space_30"
                            android:padding="@dimen/space_7"
                            android:visibility="gone"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/circleshape"
                            android:backgroundTint="@color/red_600"
                            android:src="@drawable/icons8_delete_100px"
                            android:layout_height="@dimen/space_30"/>
                        <Button
                            android:id="@+id/decline"
                            android:background="@drawable/white_button_layout"
                            android:backgroundTint="@color/red_600"

                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:text="Decline"
                            android:textAllCaps="false"
                            android:layout_marginLeft="@dimen/space_15"
                            android:layout_marginRight="@dimen/space_10"
                            android:layout_height="@dimen/space_30"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>