<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_margin="@dimen/space_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="@dimen/space_5">
        <LinearLayout
            android:id="@+id/lin_main"
            android:padding="@dimen/space_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginRight="@dimen/space_5"
            android:background="@drawable/white_button_layout"
            android:paddingBottom="@dimen/space_5"

            android:weightSum="6">

            <RelativeLayout

                android:id="@+id/rel_bcl"
                android:padding="@dimen/space_2"
                android:layout_margin="@dimen/space_10"
                android:backgroundTint="@color/badge_background_color"
                android:background="@drawable/circle_border_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/space_2"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/circle_border_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rel_fcl"
                        android:backgroundTint="@color/badge_background_color"
                        android:background="@drawable/circleshape"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                        <com.upsun.quizz.Fonts.LatoBLack
                            android:id="@+id/tv_sm"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="M"
                            android:textAlignment="gravity"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </RelativeLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">


                    <com.upsun.quizz.Fonts.LatoBLack
                        android:id="@+id/quiz_name"
                        android:textSize="17dp"
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_width="match_parent"
                        android:layout_marginRight="@dimen/space_30"
                        android:layout_height="wrap_content"/>



                    <com.upsun.quizz.Fonts.LatoBLack
                        android:id="@+id/quiz_time"
                        android:textSize="14dp"
                        android:layout_marginTop="@dimen/space_2"
                        android:layout_width="match_parent"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"/>
                    <com.upsun.quizz.Fonts.LatoBLack

                        android:textSize="17dp"
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:visibility="gone"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="end"

                >
                <ImageView
                    android:layout_width="@dimen/space_30"
                    android:layout_height="@dimen/space_30"
                    android:src="@drawable/icons8_sales_performance_96px_1"/>
                <TextView
                    android:id="@+id/quiz_amt"
                    android:text="name"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginTop="@dimen/space_2"
                    android:layout_marginLeft="@dimen/space_10"
                    android:textColor="#F7A705"
                    android:textStyle="bold"
                    android:fontFamily="@font/bold"
                    android:paddingRight="@dimen/space_10"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>