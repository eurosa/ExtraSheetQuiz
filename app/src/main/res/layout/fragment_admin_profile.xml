<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".admin.fragments.AdminProfileFragment">
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:src="@drawable/back"
            android:padding="@dimen/space_5"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:tint="@color/colorPrimary" />
        <com.upsun.quizz.Fonts.LatoBLack
            android:text="My Profile"
            android:id="@+id/tv_title"
            android:layout_toRightOf="@id/iv_back"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:elevation="@dimen/space_5"
                app:cardCornerRadius="@dimen/space_5"
                android:layout_height="250dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradientsbackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="15dp"
                        android:gravity="center_vertical">
                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/circleshape"
                            android:backgroundTint="@color/white"
                            android:layout_margin="@dimen/space_10">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_centerInParent="true"
                                android:id="@+id/user_img"/>

                            <TextView
                                android:id="@+id/initials"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-thin"
                                android:text=""
                                android:textStyle="bold"
                                android:textSize="@dimen/space_18"
                                android:visibility="gone"
                                android:layout_centerInParent="true"
                                android:textColor="@color/colorPrimary"/>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.upsun.quizz.Fonts.LatoBLack
                                android:id="@+id/txt_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="name"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/dark_black"
                                android:textSize="16dp"
                                android:layout_centerVertical="true"

                                />
                            <com.upsun.quizz.Fonts.LatoBLack
                                android:id="@+id/txt_mobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="Mobile"
                                android:textColor="@color/dark_black"
                                android:textSize="16dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <com.upsun.quizz.Fonts.LatoBLack
                        android:id="@+id/txt_edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Edit"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@drawable/icons8_pencil_24px"
                        android:drawablePadding="@dimen/space_10"
                        android:layout_margin="@dimen/space_10"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:layout_marginTop="-20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginBottom="@dimen/space_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:id="@+id/card_edi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        app:cardElevation="5dp"
                        android:layout_margin="5dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="@dimen/space_10"
                            android:paddingBottom="@dimen/space_10"
                            android:background="@drawable/gradientsbackground"
                            >
                            <ImageView

                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/icons8_registration_128px"
                                android:backgroundTint="@color/white"

                                android:layout_centerVertical="true"
                                />
                            <com.upsun.quizz.Fonts.LatoBLack

                                android:layout_margin="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Edit Profile"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="16dp"/>



                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"

                        app:cardElevation="5dp"
                        android:layout_margin="5dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="@dimen/space_10"
                            android:paddingBottom="@dimen/space_10"
                            android:background="@drawable/gradientsbackground"
                            >
                            <ImageView

                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/icons8_transfer_128px"
                                android:backgroundTint="@color/white"
                                android:layout_centerVertical="true"
                                />
                            <com.upsun.quizz.Fonts.LatoBLack

                                android:layout_margin="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Switch Account"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="16dp"/>



                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>